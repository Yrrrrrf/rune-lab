{
  "name": "rune-lab",
  "version": "0.1.0",
  "description": "Rune Lab: Modern toolkit for Svelte 5 Runes applications.",
  "type": "module",
  "license": "MIT",
  "author": "Fernando Bryan Reza Campos",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yrrrrrf/rune-lab.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./state": {
      "types": "./dist/state/index.d.ts",
      "default": "./dist/state/index.js"
    },
    "./layout": {
      "types": "./dist/layout/index.d.ts",
      "default": "./dist/layout/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./paraglide/*": {
      "types": "./dist/paraglide/*.d.ts",
      "default": "./dist/paraglide/*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && bun run prepack",
    "preview": "vite preview",
    "compile": "paraglide-js compile --project ./src/i18n/project.inlang --outdir ./src/lib/paraglide",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "bun run compile && bunx svelte-kit sync && bunx svelte-package && rm -f dist/paraglide/.gitignore dist/paraglide/.prettierignore && bunx publint"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.53.0",
    "svelte": "^5.53.2"
  },
  "devDependencies": {
    "@inlang/paraglide-js": "^2.12.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^25.3.0",
    "daisyui": "^5.5.19",
    "esm-env": "^1.2.2",
    "hotkeys-js": "^4.0.0",
    "publint": "^0.3.17",
    "svelte-check": "^4.4.3",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
